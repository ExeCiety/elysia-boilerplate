{
  "name": "elysia-boilerplate",
  "version": "1.0.0",
  "description": "Production-ready REST API boilerplate using ElysiaJS and Bun",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "start": "NODE_ENV=production bun run src/server.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "test": "bun test"
  },
  "dependencies": {
    "elysia": "^1.2.10",
    "@elysiajs/cors": "^1.1.1",
    "drizzle-orm": "^0.38.4",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.30.4",
    "typescript": "^5.7.3"
  }
}
